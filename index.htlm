  </div>
</div>

<!-- Reports modal -->
<div class="modal" id="modal">
  <div class="box">
    <button class="close" id="closeM">Fermer</button>
    <h3>Rapports (NB‑LEL)</h3>
    <div class="tags">
      <button class="btn" data-rpt="day">Rapport du jour</button>
      <button class="btn" data-rpt="week">Rapport de la semaine</button>
